<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shape_bg"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/CustomDlgTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textColor="@color/black"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"/>

    <LinearLayout
        android:id="@+id/CustomDlgContentView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="3dp" />

    <TextView
        android:id="@+id/CustomDlgContentText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:paddingLeft="5dp"
        android:text="@string/dlg_text"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_cust_name"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:text="@string/dlg_name"
            android:layout_centerVertical="true"/>

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:maxEms="10"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:id="@+id/edit_name"
            android:focusable="true"
            android:layout_toRightOf="@+id/tv_cust_name"
            android:textCursorDrawable="@drawable/color_cursor"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/CustomDlgButtonOK"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textColor="@color/grey" />

        <Button
            android:id="@+id/CustomDlgButtonCancel"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textColor="@color/grey"/>
    </LinearLayout>

</LinearLayout>