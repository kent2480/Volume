            </LinearLayout>

            <SeekBar
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:paddingTop="15dp"
                android:id="@+id/sb_alarm"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
